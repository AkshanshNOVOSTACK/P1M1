<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginRegistration.Login2Activity">

        <ImageView
            android:id="@+id/shop_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="130dp"
            android:src="@drawable/ic_login_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/reset_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/edit_hgt"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center"
            android:text="@string/enter_otp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/cust_textsize"
            app:layout_constraintTop_toBottomOf="@+id/shop_icon" />
        <TextView
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center"
            android:text="@string/enter_otp"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_splash"
            app:layout_constraintTop_toBottomOf="@+id/reset_pin" />
        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/go_margin"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/code">
            <EditText
                android:id="@+id/edit1"
                android:textColor="@color/colorBlack"
                style="@style/Edit_Back"/>
            <EditText
                android:id="@+id/edit2"
                android:textColor="@color/colorBlack"
                style="@style/Edit_Back"/>
            <EditText
                android:id="@+id/edit3"
                android:textColor="@color/colorBlack"
                style="@style/Edit_Back"/>
            <EditText
                android:id="@+id/edit4"
                android:textColor="@color/colorBlack"
                style="@style/Edit_Back"
                android:layout_marginRight="0dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/lin">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:text="Waiting for OTP "
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/txt_splash"/>
            <TextView
                android:id="@+id/otp_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_medium"
                android:textColor="@color/colorTextSecondary"
                android:textSize="@dimen/txt_splash"/>
        </LinearLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/splash_btn_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/large_margin"
            android:fontFamily="@font/gilroy_medium"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="@string/Login"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
